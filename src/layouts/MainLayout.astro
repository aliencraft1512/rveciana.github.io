---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MainHead from "../components/MainHead.astro";
const { title, description, head, url, twitterImage } = Astro.props;
---

<html lang="en">
  <head>
    {head}
    <MainHead
      title={title ? `Geoexamples - ${title}` : "GeoExamples - Roger Veciana"}
      description={description}
      url={url}
      twitterImage={twitterImage}
    />
  </head>
  <body class="body">
    <Header />
    <main tabindex="-1" class="main-content wrapper grid-container">
      <slot />
    </main>
    <Footer />
    <style>
      .main-content {
        padding: 20px;
      }
      .body {
        max-width: 900px;
        margin-right: auto;
        margin-left: auto;
      }
    </style>
  </body>
</html>
